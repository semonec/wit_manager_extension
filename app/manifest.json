{
  "manifest_version": 2,
  "name": "위트랜드 헬퍼",
  "description": "위트랜드 사용을 편하게 해주는 헬퍼 플러그인 입니다.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "위트랜드 헬퍼",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "*://*.witland.xyz/*"
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.witland.xyz/*"],
      "js": ["js/runner.js", "libs/jquery-3.3.1.min.js"]
    }
  ],
  "options_page": "settings.html"
}