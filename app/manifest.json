{
  "manifest_version": 2,
  "name": "WitLand Helper",
  "description": "This extension for witland",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "WitLand Helper"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "*://*.witland.xyz/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.witland.xyz/*"],
      "js": ["runner.js"]
    }
  ]
}